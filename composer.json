{
  "name": "leuffen/mailbodyparse",
  "description": "Parse Mail Body (forwarded, replied) and extract original messages",
  "license": "MIT",
  "authors": [
    {
      "name": "Matthias Leuffen",
      "email": "m@tth.es"
    }
  ],
  "require": {
    "php": ">=8.3",
    "php-mime-mail-parser/php-mime-mail-parser": "^8",
    "league/html-to-markdown": "^5.2@dev"
  },
  "suggest": {},
  "autoload": {
    "psr-4": {
      "Leuffen\\MailBodyParse\\": "src/",
      "EmailReplyParser\\": "src/EmailReplyParser/"
    },
    "files": []
  },
  "minimum-stability": "dev",
  "config": {
    "preferred-install": "source"
  },
  "scripts": {
    "clean-samples": "php ./scripts/clean-samples.php",
    "test": "php ./vendor/bin/phpunit --colors --testdox test",
    "test-samples": "php ./vendor/bin/phpunit --colors --testdox test/SamplesEmailsTest.php"
  },
  "require-dev": {
    "phpunit/phpunit": "^11"
  }
}
